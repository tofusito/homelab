{
    "mcpServers": {
        "filesystem": {
            "command": "npx",
            "args": ["-y", "@modelcontextprotocol/server-filesystem", "/MediaServer/Series", "/MediaServer/Movies"]
        },
        "mcp-server-docker": {
            "command": "uvx",
            "args": [
                "mcp-server-docker"
            ]
        },
        "openai-websearch-mcp": {
            "command": "uvx",
            "args": ["openai-websearch-mcp"]
        },
        "sequential-thinking": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ]
        },
        "notionApi": {
            "command": "npx",
            "args": ["-y", "@notionhq/notion-mcp-server"]
        }
    }
} 